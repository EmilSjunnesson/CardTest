<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/calculate_final_highscore_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bgblurblue1" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/final_score_pic" />

    <TextView
        android:id="@+id/calculate_highscore_highscoreint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/calculate_highscore_title"
        android:layout_marginTop="10dp"
        android:textSize="12sp"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#d9bd8c" />

    <TextView
        android:id="@+id/calculate_highscore_timebonus_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/calculate_highscore_title"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/calculate_highscore_highscoreint"
        android:layout_marginTop="15dp"
        android:textSize="15sp"
        android:gravity="center"
        android:text="Time bonus:"
        android:textColor="#d9bd8c" />

    <TextView
        android:id="@+id/calculate_highscore_timebonusint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/calculate_highscore_highscoreint"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/calculate_highscore_timebonus_title"
        android:layout_marginTop="10dp"
        android:textSize="12sp"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#d9bd8c" />

    <TextView
        android:id="@+id/calculate_highscore_finalscore_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/calculate_highscore_timebonus_title"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/calculate_highscore_timebonusint"
        android:layout_marginTop="15dp"
        android:textSize="15sp"
        android:gravity="center"
        android:text="Final score:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#d9bd8c" />

    <TextView
        android:id="@+id/calculate_highscore_finalscoreint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/calculate_highscore_finalscore_title"
        android:layout_marginTop="10dp"
        android:textSize="12sp"
        android:gravity="center"
        android:textColor="#d9bd8c"
        android:text="TextView" />

    <TextView
        android:id="@+id/calculate_highscore_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="45dp"
        android:textSize="15sp"
        android:gravity="center"
        android:text="Score:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#d9bd8c" />

</RelativeLayout>